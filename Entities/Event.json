{
  "name": "Event",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Event name"
    },
    "description": {
      "type": "string",
      "description": "Event description"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "Event date and time"
    },
    "genres": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "house",
          "techno",
          "drum-and-bass",
          "dubstep",
          "trance",
          "hardstyle",
          "ambient",
          "breakbeat"
        ]
      },
      "description": "Music genres"
    },
    "location_name": {
      "type": "string",
      "description": "Location name (visible to all)"
    },
    "location_address": {
      "type": "string",
      "description": "Full address (only visible to approved attendees)"
    },
    "capacity": {
      "type": "number",
      "description": "Maximum attendees"
    },
    "guest_passes_per_attendee": {
      "type": "number",
      "default": 1,
      "description": "How many guests each approved attendee can bring"
    },
    "cover_image": {
      "type": "string",
      "description": "Event cover image URL"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "published",
        "live",
        "ended"
      ],
      "default": "draft"
    },
    "screening_required": {
      "type": "boolean",
      "default": true
    },
    "created_by": {
      "type": "string",
      "description": "Email of event creator"
    }
  },
  "required": [
    "name",
    "date",
    "location_name",
    "capacity",
    "created_by"
  ]
}
